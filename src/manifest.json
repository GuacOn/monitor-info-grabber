{
  "manifest_version": 2,
  "name": "Monitor Info Grabber",
  "version": "1.0.2",
  "description": "Uses AI to supplement listings for used monitors with information from the Rtings review site.",
  "permissions": ["activeTab", "storage", "*://*.gumtree.com.au/s-monitors/*", "https://api.openai.com/v1/chat/completions", "https://www.rtings.com/search"],
  "icons": {
    "96": "icons/border-96.png"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": ["*://*.gumtree.com.au/s-monitors/*"],
      "js": ["site-gumtree-search.js"]
    },
    {
      "matches": ["*://*.gumtree.com.au/s-ad/*"],
      "js": ["site-gumtree-ad.js"]
    }
  ]
}
